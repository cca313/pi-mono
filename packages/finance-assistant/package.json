{
	"name": "@mariozechner/pi-finance-assistant",
	"version": "0.52.9",
	"description": "Shared finance analysis core for pi web and cli",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": ["dist", "README.md"],
	"scripts": {
		"clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
		"build": "tsgo -p tsconfig.build.json",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"test": "vitest --run",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"typescript": "^5.7.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
